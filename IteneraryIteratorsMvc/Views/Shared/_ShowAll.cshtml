@model IndexVM
<div class="containershowall">
@if (Model.restaurants != null)
{
	<div class="cardh1">
		<h1>Restaurants</h1>
	</div>
	<div class="Restaurantcard">


		@foreach (var item in Model.restaurants)
		{
			<a asp-controller="Travels" asp-action="GetDetails" asp-route-id="@item.Id" class="a-tags">
				<div class="cardcontent">
					<img src="@item.ImageUrl" class="Images" alt="@item.AltTag"/>

					<h3> <strong>@item.Name </strong> </h3>

					<h3> @item.CityName	</h3>
				</div>
			</a>
		}
	</div>

}
@if (Model.activities != null)
{
	<div class="cardh1">

		<h1>Activities</h1>
	</div>

	<div class="Activitycard">
		@foreach (var item in Model.activities)
		{
			<a asp-controller="Travels" asp-action="GetDetails" asp-route-id="@item.Id" class="a-tags">
				<div class="cardcontent">
					<img src="@item.ImageUrl" class="Images" alt="@item.AltTag"/>

					<h3> <strong>@item.Name </strong> </h3>

					<h3> @item.CityName	</h3>
				</div>
			</a>
		}
	</div>

}

</div>